{
  "manifest_version": 3,
  "name": "Add to Sooner",
  "homepage_url": "https://sooner.app",
  "description": "A browser extension for quickly adding pages to your Sooner list",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "contextMenus",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://sooner.app/*",
    "http://localhost:3000/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Add to Sooner",
    "default_icon": {
      "16": "icons/16.png",
      "24": "icons/24.png",
      "32": "icons/32.png"
    }
  }
}
